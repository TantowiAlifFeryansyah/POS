<%- include('../partials/header') %>

    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
            <button class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" type="submit" onclick="exportTableToCSV('report.csv')">
                <span class="fas fa-download fa-sm text-white-50"></span>
                Generate Report </button>
        </div>

        <!-- Date Settings -->

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h5 class="m-0 font-weight-bold text-primary">Date Settings</h5>
            </div>

            <div class="card-body">
                <form id="dateSetting" class="row" method="get">

                    <div class="col-md-6">
                        <label for="startdate" class="form-label">Start Date</label>
                        <input type="date" class="form-control" id="startdate" name="startdate" value="<%= query.startdate %>"></div>

                    <div class="col-md-6">
                        <label for="enddate" class="form-label">End Date</label>
                        <input type="date" class="form-control" id="enddate" name="enddate" value="<%= query.enddate %>"></div>

                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-success btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-check"></i>
                        </span>
                        <span class="text">Query</span>
                    </button>

                    <a href="/dashboard" class="btn btn-warning btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-arrow-left"></i>
                        </span>
                        <span class="text">Reset</span>
                    </a>

                </form>
            </div>
        </div>

        <!-- Content Row -->
        <div class="row">

            <!-- Purchases -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-primary shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                    PURCHASES</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    <%= currencyFormatter.format(purchases.totalpurchases ,{ code: 'IDR' }) %>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-calendar fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sales -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    SALES</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    <%= currencyFormatter.format(sales.totalsales ,{ code: 'IDR' }) %>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Earnings -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-success shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                    EARNINGS</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    <%= currencyFormatter.format(totalearnings ,{ code: 'IDR' }) %>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pending Requests -->
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card border-left-warning shadow h-100 py-2">
                    <div class="card-body">
                        <div class="row no-gutters align-items-center">
                            <div class="col mr-2">
                                <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                    Total Sales</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">
                                    <%= invoice.totalinvoice%>
                                </div>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-comments fa-2x text-gray-300"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Content Row -->

        <div class="row">

            <!-- Area Chart -->
            <div class="col-xl-8 col-lg-7">
                <div class="card shadow mb-4.3">
                    <!-- Card Header - Dropdown -->
                    <div
                        class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Earnings Overview</h6>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body mt-4">
                        <div class="chart-area">
                            <canvas id="myLineChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pie Chart -->
            <div class="col-xl-4 col-lg-5">
                <div class="card shadow mb-4">
                    <!-- Card Header - Dropdown -->
                    <div
                        class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                        <h6 class="m-0 font-weight-bold text-primary">Revenue Sources</h6>
                    </div>
                    <!-- Card Body -->
                    <div class="card-body">
                        <div class="chart-pie pt-4 pb-2">
                            <canvas id="myDoughnutChart"></canvas>
                        </div>
                        <div class="mt-4 text-center small">
                            <span class="mr-2">
                                Customers
                            </span>
                        </div>
                        <div class="mt-1 text-center small">
                            <span class="mr-1">
                                <i class="fas fa-circle text-primary"></i>
                                General
                            </span>
                            <span class="mr-1">
                                <i class="fas fa-circle text-success"></i>
                                Members
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Earnings Monthly Report-->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h5 class="m-0 font-weight-bold text-primary">Earnings Monthly Report</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table
                        class="table table-bordered"
                        id="dashboardtable"
                        width="100%"
                        cellspacing="0">
                        <thead>
                            <tr>
                                <th>Monthly</th>
                                <th>Expense</th>
                                <th>Revenue</th>
                                <th>Earning</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% subtotal.forEach(item => { %>
                                <tr>
                                    <td>
                                        <%= item.monthly %></td>
                                    <td>
                                        <%= currencyFormatter.format(item.expense ,{ code: 'IDR' }) %></td>
                                    <td>
                                        <%= currencyFormatter.format(item.revenue ,{ code: 'IDR' }) %></td>
                                    <td>
                                        <%= currencyFormatter.format(item.revenue - item.expense ,{ code: 'IDR' }) %></td>
                                </tr>
                                <% })%>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Total</th>
                                        <th><%= currencyFormatter.format(purchases.totalpurchases ,{ code: 'IDR' }) %></th>
                                        <th><%= currencyFormatter.format(sales.totalsales ,{ code: 'IDR' }) %></th>
                                        <th><%= currencyFormatter.format(totalearnings ,{ code: 'IDR' }) %></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>

                <%- include('../partials/footer') %>
                <%- include('report') %>
                <%- include('doughnut') %>
                <%- include('line') %>

                    <script>
                        $(document).ready(() => {
                            $('#dashboardtable').DataTable()
                        })
                    </script>